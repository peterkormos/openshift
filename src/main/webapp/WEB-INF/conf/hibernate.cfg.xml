<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">${db.driver.class}</property>
        <property name="hibernate.connection.url">${db.url}</property>
        <property name="hibernate.connection.username">${db.user}</property>
        <property name="connection.password">${db.password}</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">${hibernate.dialect}</property>

        <property name="connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>

        <!-- configuration for connection pool via c3p0 -->
        <property name="c3p0.min_size">1</property>
        <property name="c3p0.max_size">20</property>
        <property name="c3p0.acquire_increment">1</property>
        <property name="c3p0.max_statements">50</property>
        <property name="c3p0.timeout">14400</property>
        <property name="c3p0.idle_test_period">3600</property>
        <property name="c3p0.validate">true</property>
        <property name="c3p0.testConnectionOnCheckin">true</property>
<!--         <property name="c3p0.preferredTestQuery">true</property> -->

        <property name="connection.autoReconnect">true</property>
        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>
<!--         <property name="show_sql">true</property> -->
<!-- 		<property name="format_sql">true</property> -->
<!-- 		<property name="use_sql_comments">true</property> -->

        <!-- Drop and re-create the database schema on startup -->

        <!-- <property name="hbm2ddl.auto">create</property> -->

        <property name="hbm2ddl.auto">update</property>

        <mapping class="datatype.judging.JudgingScore" />
        <mapping class="datatype.judging.JudgingCriteria" />
        <mapping class="datatype.judging.JudgingSheet" />
        <mapping class="datatype.judging.JudgingCategoryToSheetMapping" />
        <mapping class="datatype.User" />
        <mapping class="datatype.LoginConsent" />
        <mapping class="datatype.Model" />
        <mapping class="datatype.Detailing" />
        <mapping class="datatype.Category" />
        <mapping class="datatype.CategoryGroup" />

    </session-factory>
</hibernate-configuration>